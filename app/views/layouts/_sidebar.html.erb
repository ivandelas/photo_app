<h2>Account</h2>
<section>
  <h4>Details</h4>
  <dl>
    <dt>Email</dt>
    <dd><%= current_user.email %></dd>
    <dt>Images uploaded</dt>
    <dd><%= current_user.images.count %></dd>
    <dt>Subscriptions</dt>
    <dd><%= current_user.orders.last.product.name %></dd>
  </dl>
</section>
<section class="mt-3">
  <h4>Actions</h4>
  <div>
    <%= link_to 'Edit account details', edit_user_registration_path(current_user), class: 'btn btn-secondary' %>
  </div>
  <div class="mt-2">
    <%= link_to 'Cancel account', user_registration_path, method: :delete, class: 'btn btn-danger' %>
  </div>
</section>
